<div id="sign-in-wrapper">
  <div class="sign-in">
    <div>
      <h3>Sign In</h3>
    </div>
    <div>
      <form class="signin-form">
        <div>
          <input type="text" id="username-login" placeholder="username" />
        </div>
        <div>
          <input type="password" id="password-login" placeholder="password" />
        </div>
        <div class="mb-3">
          <button id="sign-in-btn" type="submit">sign in</button>
        </div>
      </form>
    </div>
  </div>
  <div>
    <small>Don't have an account? <a id="sign-up-switch" href="#">Sign up!</a></small>
  </div>
  <div>
    <small id="login-error"></small>
  </div>
</div>

<div id="sign-up-wrapper" class="hidden">
  <div class="sign-up">
    <div>
      <h3>Sign Up</h3>
    </div>
    <div>
      <form class="signup-form">
        <div>
          <input type="text" id="username-signup" placeholder="username" />
        </div>
        <div class="mb-3">
          <input type="text" id="email-signup" placeholder="email" />
        </div>
        <div class="mb-3">
          <input type="text" id="nickname-signup" placeholder="nickname" />
        </div>
        <div class="mb-3">
          <input type="password" id="password-signup" placeholder="password" />
        </div>
        <div class="mb-3">
          <button id="sign-up-btn" type="submit">sign up</button>
        </div>
      </form>
    </div>
  </div>
  <div>
    <small>Already have an account? <a id="sign-in-switch" href="#">Sign in!</a></small>
  </div>
  <div>
    <small id="sign-up-error"></small>
  </div>
</div>
<script src="/javascript/login.js"></script>